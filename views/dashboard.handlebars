

<div class="row mt-12 new-post">
  
<div clss="col-md-4 post-list create-post">
      <a class="add-post-link" href="/post"> + New Post </a>
    </div>


  {{#if posts.length}}
  <div class="col-md-8 post-list">
    <h3>Current posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8 added-post">
        <h4>
          <a href="/postUpdate/{{post.id}}">{{post.title}}</a> 
          </h4>
        <p> {{format_date post.date_created}}</p>
      </div>

    
    </div>
    {{/each}}
  </div>
  {{/if}}
    
</div>
<script src="./js/dashboard.js"></script>
